version: "3.3"
volumes:
  data:
    name: vaultwarden_data
services:
  server:
    container_name: vaultwarden
    ports:
      - 3012:3012
      - 5151:80
    network_mode: bridge
    environment:
      - SIGNUPS_ALLOWED=false
      - SIGNUPS_VERIFY=true
      - DOMAIN=${DOMAIN}
      - SMTP_HOST=${SMTP_HOST}
      - SMTP_PORT=${SMTP_PORT}
      - SMTP_FROM=${SMTP_FROM}
      - SMTP_SECURITY=starttls
      - SMTP_USERNAME=${SMTP_USERNAME}
      - SMTP_PASSWORD=a${SMTP_PASSWORD}
    volumes:
      - data:/data
    restart: always
    image: vaultwarden/server
